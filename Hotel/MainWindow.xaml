               Margin="191,124,0,0" VerticalAlignment="Top"/>
        <Label Content="Введите пароль" Foreground="White" FontSize="23" HorizontalAlignment="Left" 
               Margin="191,165,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="411,132,0,0" 
                 TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="411,174,0,0" 
                 TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
