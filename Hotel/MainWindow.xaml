        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
      <Image Source="/1637350496_6-gamerwall-pro-p-temno-sinii-abstraktnii-fon-krasivie-oboi-6.jpg"  Height="600" />
        <Label Content="Авторизация для администратора"   Foreground="White"  FontSize="30" HorizontalAlignment="Left"
