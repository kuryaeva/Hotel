                Foreground="#4682B4" Margin="317,366,0,0"  FontSize="17" VerticalAlignment="Top" Width="165"
                Height="30"/>
        <Button Content="Вернуться в профиль" Click="Button_Click_1" Background="White" Foreground="#4682B4" FontSize="15" 
                HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="168"/>
